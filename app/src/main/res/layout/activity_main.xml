<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <com.bawei.wangguanhua2020224.custom.CustomStemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.bawei.wangguanhua2020224.custom.CustomViewGroup
        android:layout_width="match_parent"
        android:id="@+id/cvg"
        android:layout_height="wrap_content"></com.bawei.wangguanhua2020224.custom.CustomViewGroup>
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <com.stx.xhb.xbanner.XBanner
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:id="@+id/xb"></com.stx.xhb.xbanner.XBanner>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/bg"
           android:layout_marginLeft="@dimen/dp40"
           android:gravity="center"
           android:text="热销新品"
           android:textColor="#ff7f57"
           android:textSize="25sp" />
       <ListView
           android:layout_width="match_parent"
           android:id="@+id/hotlist"
           android:layout_height="@dimen/dp166"></ListView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/bg"
           android:layout_marginLeft="@dimen/dp40"
           android:gravity="center"
           android:text="魔力时尚"
           android:textColor="#ff7f57"
           android:textSize="25sp" />
       <ListView
           android:layout_width="match_parent"
           android:id="@+id/fashionlist"
           android:layout_height="@dimen/dp200"></ListView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/bg"
           android:layout_marginLeft="@dimen/dp40"
           android:gravity="center"
           android:text="品质生活"
           android:textColor="#ff7f57"
           android:textSize="25sp" />
       <GridView
           android:layout_margin="20dp"
           android:layout_width="match_parent"
           android:id="@+id/lv"
           android:numColumns="2"
           android:layout_height="600dp"></GridView>
   </LinearLayout>
 </ScrollView>
</LinearLayout>